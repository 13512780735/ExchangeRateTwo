<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/defualt_window_background"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <include layout="@layout/common_top_bar_img"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">


        <ImageView
            android:id="@+id/head_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_user_head"/>

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/txt_gray"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/user_account_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/txt_gray"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/apply_date_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="申請日期:"
                android:textColor="@color/txt_gray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/last_login_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最後登錄:"
                android:textColor="@color/txt_gray"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_stroke_height"
        android:background="@color/userinfo_line_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_stroke_height"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@color/userinfo_line_color"/>

    <LinearLayout
        android:id="@+id/modify_date_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修改資料"
            android:textColor="@color/txt_gray"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_stroke_height"
        android:visibility="gone"
        android:background="@color/userinfo_line_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_stroke_height"
        android:layout_marginTop="10dp"
        android:background="@color/userinfo_line_color"/>

    <LinearLayout
        android:id="@+id/modify_passwd_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修改密碼"
            android:textColor="@color/txt_gray"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_stroke_height"
        android:background="@color/userinfo_line_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_stroke_height"
        android:layout_marginTop="10dp"
        android:background="@color/userinfo_line_color"/>

    <LinearLayout
        android:id="@+id/update_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="更新版本"
            android:textColor="@color/txt_gray"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_gray"
            android:layout_marginRight="10dp"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_stroke_height"
        android:background="@color/userinfo_line_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_stroke_height"
        android:layout_marginTop="10dp"
        android:background="@color/userinfo_line_color"/>

    <TextView
        android:id="@+id/exit_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="退出登錄"
        android:textColor="@color/txt_gray"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_stroke_height"
        android:background="@color/userinfo_line_color"/>
</LinearLayout>