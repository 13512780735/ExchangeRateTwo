<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/common_top_bar_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_input_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_round_stroke_forget_input"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="姓名"
            android:textColor="@color/txt_red"
            android:textSize="@dimen/defulat_txt_size" />

        <EditText
            android:id="@+id/name_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:hint="請輸入你的姓名"
            android:textColor="@color/txt_red"
            android:textColorHint="@color/txt_pink"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_input_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_round_stroke_forget_input"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="手機(賬號)"
            android:textColor="@color/txt_red"
            android:textSize="@dimen/defulat_txt_size" />

        <EditText
            android:id="@+id/phone_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:hint="賬號限手機號碼"
            android:textColor="@color/txt_red"
            android:textColorHint="@color/txt_pink"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_input_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_round_stroke_forget_input"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="手機驗證"
            android:textColor="@color/txt_red"
            android:textSize="@dimen/defulat_txt_size" />

        <EditText
            android:id="@+id/phone_check_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint=""
            android:textColor="@color/txt_red"
            android:textColorHint="@color/txt_pink"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/get_check_tv"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_right_round_phone_check_"
            android:gravity="center"
            android:text="獲取驗證碼"
            android:textColor="@color/white"
            android:textSize="@dimen/defulat_txt_size" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_input_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_round_stroke_forget_input"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="密碼"
            android:textColor="@color/txt_red"
            android:textSize="@dimen/defulat_txt_size" />

        <EditText
            android:id="@+id/passwd_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="請設置密碼"
            android:textColor="@color/txt_red"
            android:textColorHint="@color/txt_pink"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_input_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_round_stroke_forget_input"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="確認密碼"
            android:textColor="@color/txt_red"
            android:textSize="@dimen/defulat_txt_size" />

        <EditText
            android:id="@+id/re_passwd_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="確認設置密碼"
            android:textColor="@color/txt_red"
            android:textColorHint="@color/txt_pink"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/checkbox_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint=""
            android:textColorHint="@color/txt_red"
            style="@style/register_check_style"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/protocol_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:hint="同意《大台北外匯網》服務條款"
            android:textColorHint="@color/txt_red"
            style="@style/register_check_style"
            android:textSize="16sp" />
    </LinearLayout>



    <TextView
        android:id="@+id/registed_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_button_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_round_stroke_login_butt"
        android:gravity="center"
        android:text="註冊會員"
        android:textSize="18sp" />
</LinearLayout>