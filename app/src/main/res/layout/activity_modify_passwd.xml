<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_top_bar_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_input_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_round_stroke_forget_input"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="當前密碼"
            android:textColor="@color/txt_red"
            android:textSize="@dimen/defulat_txt_size" />

        <EditText
            android:id="@+id/now_passwd_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:hint="請輸入當前密碼"
            android:inputType="textPassword"
            android:textColor="@color/txt_red"
            android:textColorHint="@color/txt_pink"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_input_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_round_stroke_forget_input"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="新密碼"
            android:textColor="@color/txt_red"
            android:textSize="@dimen/defulat_txt_size" />

        <EditText
            android:id="@+id/new_passwd_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:hint="請設置新密碼"
            android:inputType="textPassword"
            android:textColor="@color/txt_red"
            android:textColorHint="@color/txt_pink"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_input_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_round_stroke_forget_input"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:text="確認密碼"
            android:textColor="@color/txt_red"
            android:textSize="@dimen/defulat_txt_size" />

        <EditText
            android:id="@+id/re_new_passwd_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:hint="確認設置密碼"
            android:inputType="textPassword"
            android:textColor="@color/txt_red"
            android:textColorHint="@color/txt_pink"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/get_passwd_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defulat_button_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_round_stroke_login_butt"
        android:gravity="center"
        android:text="修改密碼"
        android:textSize="18sp" />
</LinearLayout>