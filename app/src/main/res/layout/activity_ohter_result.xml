<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/txt_gray_c"
              android:orientation="vertical">
    <include
        layout="@layout/common_top_bar_img"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                layout="@layout/comm_item_rate_info_result"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/rate_result_item_middle_height"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@color/rate_input_item_bg"
                android:layout_marginTop="@dimen/rate_input_item_gap"
                android:textColor="@color/rate_input_txt_color"
                android:text="會員約定支付寶"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rate_input_item_gap"
                android:minHeight="@dimen/rate_result_item_height"
                android:background="@color/rate_input_item_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <TextView
                    android:id="@+id/alipay_accout_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/rate_input_txt_size"
                    android:text="好友淘寶帳號:"
                    android:textColor="@color/rate_input_txt_color"/>

                <TextView
                    android:id="@+id/alipay_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/rate_input_txt_size"
                    android:layout_marginTop="5dp"
                    android:text="戶名:"
                    android:textColor="@color/rate_input_txt_color"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/rate_result_item_height"
                android:layout_marginTop="@dimen/rate_input_item_gap"
                android:background="@color/rate_input_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <EditText
                    android:id="@+id/input_bank_account_et"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="@drawable/shape_round_stroke_rate_input2"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:hint="請輸入申請人支付寶帳號"
                    android:textColorHint="@color/rate_input_hint_txt_color"
                    android:textColor="@color/rate_input_txt_color2"
                    android:textSize="@dimen/rate_input_txt_size"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/rate_result_item_height"
                android:layout_marginTop="@dimen/rate_input_item_gap"
                android:background="@color/rate_input_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <EditText
                    android:id="@+id/input_bank_name_et"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="@drawable/shape_round_stroke_rate_input2"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:hint="請輸入戶名"
                    android:textColorHint="@color/rate_input_hint_txt_color"
                    android:textColor="@color/rate_input_txt_color2"
                    android:textSize="@dimen/rate_input_txt_size"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/rate_result_bottom_height"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@color/rate_input_item_bg"
                android:layout_marginTop="@dimen/rate_input_item_gap"
                android:textColor="@color/rate_input_txt_color"
                android:text="匯入台幣的帳號"/>
            <include
                layout="@layout/comm_item_rate_info_result_bottom"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>